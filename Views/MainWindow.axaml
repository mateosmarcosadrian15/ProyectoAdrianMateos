<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProyectoAdrianMateos.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1250" d:DesignHeight="450"
        x:Class="ProyectoAdrianMateos.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ProyectoAdrianMateos">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <UniformGrid Columns="3">
        <StackPanel IsVisible="{Binding Primerformulario}" HorizontalAlignment="Center">
            <TextBlock Text="Formulario"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="30"/>
            <StackPanel Orientation="Horizontal">         
                <TextBlock Text="Nombre:" Margin="35,0,0,0" />
                <TextBox Width="150" Height="5" Margin="15,0,0,5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">         
                <TextBlock Text="Apellidos:" Margin="35,0,0,0"  />
                <TextBox Width="150" Height="5"  Margin="7,0,0,5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">         
                <TextBlock Text="E-mail:" Margin="35,0,0,0" />
                <TextBox Width="150" Height="5" Margin="25,0,0,5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">         
                <TextBlock Text="Telefono:"  Margin="35,0,0,0" />
                <TextBox Width="150" Height="5" Margin="10,0,0,10"/>
            </StackPanel>
            <CheckBox Content="Aceptar terminos y condiciones" 
                      HorizontalAlignment="Center" Margin="5,0,0,0" Name="condiciones"/>
            <CheckBox Content="Marque si es autonomo o lo fue en su momento"    
                      HorizontalAlignment="Center" Margin="28,0,0,10" Name="autonomo"/>
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="ENVIAR" 
                    Command="{Binding QuitarPrimerFormularioCommand}" CommandParameter="{Binding ElementName=autonomo }" />       
        </StackPanel>
        <StackPanel>
            <ComboBox ItemsSource="{Binding Empresas}" />
            <ListBox ItemsSource="{Binding Empresas}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0" CornerRadius="10"
                                Padding="15"
                                BorderBrush="Gray"
                                BoxShadow="10 10 5 2 DarkGray"
                                BorderThickness="1">
                            
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="{Binding nombreEmpresa}"/>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="{Binding direccion}"/>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="{Binding numEmpleados}"/>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="{Binding telefono}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel IsVisible="{Binding Segundoformulario}">
            <TextBlock Text="Formulario para autonomos" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nombre de la empresa: " HorizontalAlignment="Center" Margin="5"/>
            <TextBox Margin="5" HorizontalAlignment="Center" Text="{Binding Empresa.nombreEmpresa}" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Numero de Empleados: " HorizontalAlignment="Center" Margin="5" />
                <NumericUpDown Minimum="5" Maximum="1000" Value="{Binding Empresa.numEmpleados}"  Width="110" Height="15"  />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Direccion de la empresa" HorizontalAlignment="Center" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Margin="5" Text="{Binding Empresa.direccion}" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Tlf de la empresa" HorizontalAlignment="Center" Margin="5"/>
                <TextBox HorizontalAlignment="Center" Margin="5" Text="{Binding Empresa.telefono}" Width="150"/>
            </StackPanel>
            <Button Content="Enviar" HorizontalAlignment="Center" Command="{Binding MostrarEmpresasCommand}"/>
        </StackPanel>
    </UniformGrid>

</Window>
